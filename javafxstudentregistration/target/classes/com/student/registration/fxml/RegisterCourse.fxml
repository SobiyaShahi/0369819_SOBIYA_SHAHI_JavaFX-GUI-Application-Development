<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<VBox spacing="30.0" styleClass="root-background" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.student.registration.controller.RegisterCourseController">
   <children>
      <!-- Header Section -->
      <HBox alignment="CENTER_LEFT" spacing="20.0" styleClass="modern-page-header">
         <children>
            <Button mnemonicParsing="false" onAction="#handleBack" styleClass="modern-back-button" text="← Back" />
            <VBox spacing="8.0">
               <children>
                  <Label styleClass="modern-page-title" text="Register for Courses">
                     <font>
                        <Font name="System Bold" size="28.0" />
                     </font>
                  </Label>
                  <Label styleClass="modern-page-subtitle" text="Select courses to add to your schedule" />
               </children>
            </VBox>
         </children>
      </HBox>
      
      <!-- Instructions Section -->
      <VBox spacing="10.0" styleClass="instructions-section">
         <children>
            <Label styleClass="section-header" text="Available Programming Courses">
               <font>
                  <Font name="System Bold" size="20.0" />
               </font>
            </Label>
            <Label styleClass="modern-page-subtitle" text="Check the courses you want to register for, then click 'Update Registration'" />
         </children>
      </VBox>
      
      <!-- Course Selection Grid -->
      <VBox spacing="15.0" styleClass="course-grid-container">
         <children>
            <ScrollPane fitToWidth="true" styleClass="modern-scroll-pane" prefHeight="450.0">
               <content>
                  <VBox spacing="20.0">
                     <children>
                        <GridPane fx:id="coursesGrid" hgap="25.0" vgap="25.0" alignment="CENTER">
                           <padding>
                              <Insets bottom="25.0" left="25.0" right="25.0" top="25.0" />
                           </padding>
                        </GridPane>
                     </children>
                  </VBox>
               </content>
            </ScrollPane>
         </children>
      </VBox>
      
      <!-- Action Button Section -->
      <HBox alignment="CENTER" spacing="20.0">
         <children>
            <Button mnemonicParsing="false" onAction="#handleRegister" styleClass="modern-primary-btn" text="Update Registration">
               <font>
                  <Font name="System Bold" size="16.0" />
               </font>
            </Button>
         </children>
      </HBox>
   </children>
   <padding>
      <Insets bottom="30.0" left="30.0" right="30.0" top="30.0" />
   </padding>
</VBox>
