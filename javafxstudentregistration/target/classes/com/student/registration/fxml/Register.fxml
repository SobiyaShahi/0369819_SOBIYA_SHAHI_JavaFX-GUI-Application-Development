<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<ScrollPane fitToWidth="true" styleClass="root-background" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.student.registration.controller.RegisterController">
   <content>
      <VBox alignment="CENTER" spacing="20.0">
         <children>
            <!-- Header -->
            <VBox alignment="CENTER" spacing="10.0" styleClass="register-header">
               <children>
                  <Label styleClass="simple-title" text="Register">
                     <font>
                        <Font name="System Bold" size="24.0" />
                     </font>
                  </Label>
               </children>
            </VBox>
            
            <!-- Registration Form -->
            <VBox spacing="20.0" styleClass="register-form">
               <children>
                  <!-- Step 1: Account Information -->
                  <VBox spacing="15.0" styleClass="form-section">
                     <children>
                        <Label styleClass="section-title" text="1. Account Information">
                           <font>
                              <Font name="System Bold" size="16.0" />
                           </font>
                        </Label>
                        
                        <VBox spacing="15.0">
                           <children>
                              <HBox spacing="15.0">
                                 <children>
                                    <VBox spacing="5.0" HBox.hgrow="ALWAYS">
                                       <children>
                                          <Label styleClass="field-label" text="Username" />
                                          <TextField fx:id="usernameField" promptText="Choose a username" styleClass="modern-input" />
                                       </children>
                                    </VBox>
                                    <VBox spacing="5.0" HBox.hgrow="ALWAYS">
                                       <children>
                                          <Label styleClass="field-label" text="Email Address" />
                                          <TextField fx:id="emailField" promptText="Enter your email" styleClass="modern-input" />
                                       </children>
                                    </VBox>
                                 </children>
                              </HBox>
                              
                              <HBox spacing="15.0">
                                 <children>
                                    <VBox spacing="5.0" HBox.hgrow="ALWAYS">
                                       <children>
                                          <Label styleClass="field-label" text="Password" />
                                          <PasswordField fx:id="passwordField" promptText="Create a password" styleClass="modern-input" />
                                       </children>
                                    </VBox>
                                    <VBox spacing="5.0" HBox.hgrow="ALWAYS">
                                       <children>
                                          <Label styleClass="field-label" text="Confirm Password" />
                                          <PasswordField fx:id="confirmPasswordField" promptText="Confirm your password" styleClass="modern-input" />
                                       </children>
                                    </VBox>
                                 </children>
                              </HBox>
                           </children>
                        </VBox>
                     </children>
                  </VBox>
                  
                  <!-- Step 2: Personal Information -->
                  <VBox spacing="15.0" styleClass="form-section">
                     <children>
                        <Label styleClass="section-title" text="2. Personal Information">
                           <font>
                              <Font name="System Bold" size="16.0" />
                           </font>
                        </Label>
                        
                        <VBox spacing="15.0">
                           <children>
                              <VBox spacing="5.0">
                                 <children>
                                    <Label styleClass="field-label" text="Full Name" />
                                    <TextField fx:id="fullNameField" promptText="Enter your full name" styleClass="modern-input" />
                                 </children>
                              </VBox>
                              
                              <HBox spacing="15.0">
                                 <children>
                                    <VBox spacing="5.0" HBox.hgrow="ALWAYS">
                                       <children>
                                          <Label styleClass="field-label" text="Date of Birth" />
                                          <DatePicker fx:id="dobField" promptText="Select your date of birth" styleClass="modern-input" />
                                       </children>
                                    </VBox>
                                    <VBox spacing="5.0" HBox.hgrow="ALWAYS">
                                       <children>
                                          <Label styleClass="field-label" text="Phone Number" />
                                          <TextField fx:id="phoneField" promptText="Enter your phone number" styleClass="modern-input" />
                                       </children>
                                    </VBox>
                                 </children>
                              </HBox>
                              
                              <HBox spacing="15.0">
                                 <children>
                                    <VBox spacing="5.0" HBox.hgrow="ALWAYS">
                                       <children>
                                          <Label styleClass="field-label" text="Gender" />
                                          <ComboBox fx:id="genderComboBox" promptText="Select your gender" styleClass="white-combo" maxWidth="Infinity" />
                                       </children>
                                    </VBox>
                                    <VBox spacing="5.0" HBox.hgrow="ALWAYS">
                                       <children>
                                          <Label styleClass="field-label" text="Nationality" />
                                          <TextField fx:id="nationalityField" promptText="Enter your nationality" styleClass="modern-input" />
                                       </children>
                                    </VBox>
                                 </children>
                              </HBox>
                              
                              <VBox spacing="5.0">
                                 <children>
                                    <Label styleClass="field-label" text="Address" />
                                    <TextArea fx:id="addressField" promptText="Enter your address" styleClass="modern-input" prefRowCount="3" />
                                 </children>
                              </VBox>
                           </children>
                        </VBox>
                     </children>
                  </VBox>
                  
                  <!-- Step 3: Action Buttons -->
                  <VBox alignment="CENTER" spacing="15.0" styleClass="form-section">
                     <children>
                        <Label styleClass="section-title" text="3. Complete Registration">
                           <font>
                              <Font name="System Bold" size="16.0" />
                           </font>
                        </Label>
                        
                        <HBox alignment="CENTER" spacing="15.0">
                           <children>
                              <Button mnemonicParsing="false" onAction="#handleBackToLogin" styleClass="secondary-btn" text="Back to Login" />
                              <Button mnemonicParsing="false" onAction="#handleRegister" styleClass="primary-btn" text="Create Account" />
                           </children>
                        </HBox>
                     </children>
                  </VBox>
               </children>
               <padding>
                  <Insets bottom="30.0" left="30.0" right="30.0" top="20.0" />
               </padding>
            </VBox>
         </children>
         <padding>
            <Insets bottom="30.0" left="20.0" right="20.0" top="20.0" />
         </padding>
      </VBox>
   </content>
</ScrollPane>
